{
  "manifest_version": 2,
  "name": "DNS Gateway",
  "version": "1.0.0",
  "description": "Access decentralized DNS networks",
  
  "permissions": [
    "webRequest",
    "webRequestBlocking", 
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DNS Gateway"
  }
}