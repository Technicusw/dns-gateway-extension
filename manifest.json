{
  "manifest_version": 3,
  "name": "DNS Gateway",
  "version": "1.0.0",
  "description": "Decentralized DNS resolution for custom domains",
  
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "dns"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://raw.githubusercontent.com/dns-gateway/registry/main/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "DNS Gateway"
  },
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "dns-gateway@yourdomain.com",
      "strict_min_version": "109.0"
    }
  }
}