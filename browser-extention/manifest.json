{
  "manifest_version": 2,
  "name": "DNS Gateway",
  "version": "1.0.3",
  "description": "DNS Gateway with proper Host header support",
  
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "DNS Gateway"
  }
}